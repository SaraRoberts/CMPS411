@model KSS.Areas.Admin.Models.StaffBio

@{
    ViewData["Title"] = "Edit";
}

<h2 style="text-align:center">Edit Staff Bio</h2>
<hr />
<div class="row">
    <div style="margin:auto; max-width: 400px">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StaffBioId" />
            <div class="form-group">
                <label asp-for="Picture" class="control-label">Picture</label>
                <input asp-for="Picture" class="form-control" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bio" class="control-label">Bio</label>
                <input asp-for="Bio" class="form-control" />
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">User</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <br style="clear: both;">
            <div style="text-align: center" class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-default" />
                <div style="display: inline">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
