@model KSS.Areas.Admin.ViewModels.CourseEdit

@{
    ViewData["Title"] = "Edit";
}

<h2 style="text-align:center">Edit Course</h2>
<hr />
<div class="row">
    <div style="margin:auto; max-width: 750px">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseId" />
            <div class="col-md-6 form-group">
                <label asp-for="Name" class="control-label">Course Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="TypicalPrice" class="control-label">Typical Price</label>
                <input asp-for="TypicalPrice" class="form-control" />
                <span asp-validation-for="TypicalPrice" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="PrereqId" class="control-label">Prerequisite</label>
                <select asp-for="PrereqId" class="form-control" asp-items="ViewBag.PrereqId">
                    <option value="">None</option>
                </select>
                <span asp-validation-for="PrereqId" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="BookAvailable" /> Book Available
                    </label>
                </div>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="BookPrice" class="control-label">Book Price</label>
                <input asp-for="BookPrice" class="form-control" />
                <span asp-validation-for="BookPrice" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="CategoryId" class="control-label">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <br style="clear: both;"> 
            <div class="col-md-6 form-group">
                <input type="submit" value="Save Changes" class="btn btn-default" />
                <div style="display: inline">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

