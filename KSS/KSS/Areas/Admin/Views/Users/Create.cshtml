@model KSS.Areas.Admin.ViewModels.UserCreate

@{
    ViewData["Title"] = "Create";
}

<h2 style="text-align:center">Add a New User</h2>
<hr />
<div class="row">
    <div style="margin:auto; max-width: 400px">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">First Name</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-menu-right"></span>
                    </div>
                    <input asp-for="FirstName" class="form-control currency" />
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-menu-right"></span>
                    </div>
                    <input asp-for="LastName" class="form-control currency" />
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label">Phone</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-earphone"></span>
                    </div>
                    <input asp-for="Phone" class="form-control currency" />
                </div>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-envelope"></span>
                    </div>
                    <input asp-for="Email" class="form-control currency" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <p style="color:red">
                @ViewData["Duplicate"]  <!-- Displays if email already used. -->
            </p>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-lock"></span>
                    </div>
                    <input asp-for="Password" class="form-control currency" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-lock"></span>
                    </div>
                    <input asp-for="ConfirmPassword" class="form-control currency" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label">Role</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-certificate"></span>
                    </div>
                    <select asp-for="Role" class="form-control">
                        <option value="User">User</option>
                        <option value="Admin">Admin</option>
                        <option value="Staff">Staff</option>
                    </select>
                </div>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <br style="clear: both;">
            <div style="text-align: center" class="form-group">
                <input type="submit" value="Create" class="btn btn-default">
                <div style="display: inline">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
