@model IEnumerable<KSS.Areas.Admin.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h2>Users</h2>

<p>
    <a asp-action="Create">New User</a>
</p>

<h4>All Users</h4>

<div class="main-col">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                        <button type="button" class="btn btn-sm btn-default" onclick="getDetails(@item.UserId)">Details</button> |
                        <button type="button" class="btn btn-sm btn-danger" onclick="deleteItem(@item.UserId)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- HELP BOX  -->
<aside class="help">
    <div class="tooltipContainer2">
        <div class="tooltips-top">
            <h4>Help</h4>
        </div>
        <div class="tooltips-bottom">
            <p style="background:rgba(168, 57, 57, 0.2); font-weight:600;">
                Page lets admin manage all users in the system.
            </p>
            <h4>New User</h4>
            <p>
                Add new user.
            </p>
            <h4>Edit</h4>
            <p>
                Make changes to existing user.
            </p>
            <h4>Details</h4>
            <p>
                View more information about existing user.
            </p>
            <h4>Delete</h4>
            <p>
                Delete existing user.
            </p>
        </div>
    </div>
</aside>

<!--Make Modal-->
<div id="detailsModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title">User Details</h3>
            </div>
            <div class="modal-body">
                <h4 id="fullName"></h4>
                <h4 id="phone"></h4>
                <h4 id="email"></h4>
                <h4 id="role"></h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
<div id="deleteModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title">Are you sure you want to delete this user</h3>
            </div>
            <div class="modal-body">
                <h4 id="fullName2"></h4>
                <h4 id="phone2"></h4>
                <h4 id="email2"></h4>
                <h4 id="role2"></h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="confirmDelete()">Delete</button>
            </div>
        </div>

    </div>
</div>

<script>
    function getDetails(id) {


        $.ajax({
            url: '@Url.Action("Details", "Users")',
            dataType: "json",
            type: "POST",
            cache: false,
            data: { id: id },
            success: function (data) {
                if (data.success) {
                    $("#fullName").text(data.fullName);
                    $("#phone").text("Phone Number : " + data.phone);
                    $("#email").text("Email Address : " + data.email);
                    $("#role").text("Role : " + data.role);
                    $("#detailsModal").modal("show");
                }
            },
            error: function (xhr) {
                alert(xhr.responseText);
            }
        });

    }

     var deleteId;

    function deleteItem(id) {
        deleteId = null;
        $.ajax({
            url: '@Url.Action("Details", "Users")',
            dataType: "json",
            type: "POST",
            cache: false,
            data: { id: id },
            success: function (data) {
                if (data.success) {
                    $("#fullName2").text(data.fullName);
                    $("#phone2").text("Phone Number : " + data.phone);
                    $("#email2").text("Email Address : " + data.email);
                    $("#role2").text("Role : " + data.role);
                    deleteId = data.id;
                    $("#deleteModal").modal("show");
                }
            },
            error: function (xhr) {
                alert(xhr.responseText);
            }
        });

    }

     function confirmDelete() {
        $.ajax({
            url: '@Url.Action("DeleteConfirmed", "Users")',
            dataType: "json",
            type: "DELETE",
            cache: false,
            data: { id: deleteId },
            success: function (data) {
                if (data.success) {
                    if (data.canDelete) {
                        alert(data.message);
                        location.reload();
                    }
                    else {
                        alert(data.message);
                    }
                }
            },
            error: function (xhr) {
                location.reload();
            }
        });

    }

</script>