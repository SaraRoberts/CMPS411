@model KSS.Areas.Admin.Models.User
@{
    ViewData["Title"] = "Login";
}

<div class="row" style="margin:auto;">
    <div style="text-align:center;">
        <div style="margin:auto; padding:5px; background-color:#f9f9f9; width:100%; min-width:300px; max-width:500px; color:black; box-shadow:50px; border:solid 1px lightgrey">
        <img src="~/images/logo.png" style="width:100%;"/>
        @if (ViewData["Error"] != null)
        {
            <div class="alert alert-danger"> Invalid Login. Please try Again</div>
        }
        <form asp-area="Admin" asp-controller="Account" asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" id="login-box" style="width:100%;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" id="login-box" type="password" style="width:100%;" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
