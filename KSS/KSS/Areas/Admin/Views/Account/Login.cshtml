@model KSS.Areas.Admin.Models.User
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="login">
            <img src="~/images/logo.png" />
            @if (ViewData["Error"] != null)
            {
                <div class="alert alert-danger"> Invalid Login. Please try Again</div>
            }
            <form asp-area="Admin" asp-controller="Account" asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-user"></span>
                        </div>
                        <input asp-for="Email" placeholder="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-lock"></span>
                        </div>
                        <input asp-for="Password" placeholder="Password" class="form-control" type="password"  />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-default" />
                </div>
            </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
