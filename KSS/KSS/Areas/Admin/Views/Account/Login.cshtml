@model KSS.Areas.Admin.Models.User
@{
    ViewData["Title"] = "Login";
}

<h2 style="text-align: center">Login</h2>
<div class="row" style="margin: auto; alignment: center">
    <div style="text-align: center">
        @if (ViewData["Error"] != null)
        {
            <div class="alert alert-danger"> Invalid Login. Please try Again</div>
        }
        <form asp-action="Login" style="text-align: center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" style="width: 400px; margin: auto"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" style="width: 400px; margin: auto"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
